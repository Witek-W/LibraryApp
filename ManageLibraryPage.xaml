<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.ManageLibraryPage"
             Title="Zarządzaj książkami">
    <VerticalStackLayout>
        <Grid RowDefinitions="50,50,50"
              ColumnDefinitions=".100*"
              Padding="10"
              RowSpacing="10">
            <Button Grid.Row="0"
                Text="Dodaj książkę"/>
            <Button Grid.Row="1"
                Text="Usuń ksiązkę"/>
            <Button Grid.Row="2"
                Text="Edytuj książkę"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>