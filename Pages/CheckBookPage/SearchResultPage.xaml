<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.SearchResultPage"
             Title="Wyniki wyszukiwania">
    <ContentPage.Content>
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto">
                <Grid Grid.Row="0"
                      RowDefinitions="50"
                      ColumnDefinitions="100,100,100"
                      HorizontalOptions="Center">
                        <Label Grid.Column="0" Text="TytuÅ‚"/>
                        <Label Grid.Column="1" Text="Autor"/>
                        <Label Grid.Column="2" Text="Gatunek"/>
                    </Grid>
                <ListView x:Name="ResultsListView" Grid.Row="1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid RowDefinitions="50"
                                      ColumnDefinitions="100,100,100"
                                      HorizontalOptions="Center">
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}"/>
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Author}"/>
                                    <Label Grid.Row="0" Grid.Column="2" Text="{Binding Type}"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>