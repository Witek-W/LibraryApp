<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.ReturnBookPage"
             Title="Zwróć książkę">
    <VerticalStackLayout>
        <Grid RowDefinitions="50,50"
       ColumnDefinitions=".100*"
        Padding="10"
        RowSpacing="5">
            <Button Grid.Row="0"
              Text="Skanuj kod QR"
              Clicked="RentBookQRClicked"
              WidthRequest="250"/>
            <Button Grid.Row="1"
              Text="Wpisz kod ręcznie"
              Clicked="RentBookManualClicked"
              WidthRequest="250"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>