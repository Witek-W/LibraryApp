<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.ReturnBookPage"
             Title="Zwróć książkę">
    <VerticalStackLayout>
        <StackLayout Padding="10">
            <Grid RowDefinitions="83,10,83"
                  ColumnDefinitions=".10*,.10*,.10*,.10*,.10*,.10*,.10*,.10*,.10*,.10*">
                <Button Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="8" CornerRadius="25" BackgroundColor="#6f78df"
                        Text="Skanuj kod QR książki" FontSize="16" FontAttributes="Bold" Clicked="RentBookQRClicked"/>
                <Button Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="8" CornerRadius="25" BackgroundColor="#6f78df"
                        Text="Wpisz ID książki" FontSize="16" FontAttributes="Bold" Clicked="RentBookManualClicked"/>
            </Grid>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>