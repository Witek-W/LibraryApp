<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.Pages.ReturnBookPages.ReturnBookQRConfirm"
             Title="Potwierdź zwrot książki">
    <VerticalStackLayout>
        <Grid RowDefinitions="50,50,50,50,50"
              ColumnDefinitions=".50*,.50*"
              Padding="10"
              RowSpacing="5">
            <Label Grid.Row="0" Grid.ColumnSpan="2" Text="Czy chodziło Ci o tę książkę?" HorizontalOptions="Center"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Nazwa książki:"/>
            <Label Grid.Row="1" Grid.Column="1" Text="" x:Name="ManualResultName"/>
            <Label Grid.Row="2" Grid.Column="0" Text="Autor:"/>
            <Label Grid.Row="2" Grid.Column="1" Text="" x:Name="ManualResultAuthor"/>
            <Label Grid.Row="3" Grid.Column="0" Text="Gatunek książki:"/>
            <Label Grid.Row="3" Grid.Column="1" Text="" x:Name="ManualResultType"/>
            <Button Grid.Row="4" Grid.Column="0" 
                    Text="Nie" MaximumWidthRequest="120" BackgroundColor="Red" Clicked="ReturnToMainPage"/>
            <Button Grid.Row="4" Grid.Column="1" 
                    Text="Tak" MaximumWidthRequest="120" BackgroundColor="Green" Clicked="ReturnBookClicked"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>