<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.ReturnBookManual"
             Title="Wpisz kod książki">
    <VerticalStackLayout>
        <Grid RowDefinitions="50,50"
       ColumnDefinitions=".100*"
       Padding="10"
       RowSpacing="5">
            <Entry Grid.Row="0"
            Text=""
            Placeholder="Numer książki"
            x:Name="ManualBookNumber"
            TextChanged="ReturnLengthText"
            />
            <Button Grid.Row="1" 
             Text="Zwróć"
             x:Name="ButtonReturn"
             Clicked="ReturnBookManualButton"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>