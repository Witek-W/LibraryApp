<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.RentBookManual"
             Title="Wpisz kod ręcznie">
    <VerticalStackLayout>
        <Grid RowDefinitions="50"
              ColumnDefinitions=".70*,.30*"
              Padding="10"
              RowSpacing="5">
            <Entry Grid.Row="0"
                   Grid.Column="0"
                   Text=""
                   Placeholder="Numer książki"
                   x:Name="ManualBookNumber"
                   TextChanged="RentChanged"
                   />
            <Button Grid.Row="0" 
                     Grid.Column="1"
                Text="Wypożycz"
                    x:Name="RentButton"
                    Clicked="RentBookManualButton"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>