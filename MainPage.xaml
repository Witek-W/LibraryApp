<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.MainPage"
             xmlns:viewmodel="clr-namespace:Library.ViewModel"
             x:DataType="viewmodel:MainViewModel">
    <Grid RowDefinitions=".30*,.18*,.18*,.18*,.18*" 
          ColumnDefinitions=".100*"
          RowSpacing="5"
      Padding="8">
        <Image 
        Source="library.png" />
        <Button Grid.Row="1" 
        Text="Sprawdź księgozbiór" FontSize="20" Clicked="CheckBookPageButton"/>
        <Button Grid.Row="2" 
        Text="Wypożycz książkę" FontSize="20" Clicked="RentBookPageButton"/>
        <Button Grid.Row="3" 
        Text="Zwróć książkę" FontSize="20" Clicked="ReturnBookPageButton"/>
        <Button Grid.Row="4" 
        Text="Zarządzaj książkami" FontSize="20" Clicked="ManageLibraryPageButton"/>
    </Grid>
</ContentPage>
